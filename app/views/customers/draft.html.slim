/ ===================== 抽出管理画面（追加） =====================
.tops-wrapper
 -  if admin_signed_in?
  h2.headline AI抽出

  .extraction-header
    .period-box
      / 期間選択フォーム（GETで現在のページに送信）
      .period-form
        = form_tag(request.path, method: :get, class: 'period-form__form') do
          = hidden_field_tag :industry_name, params[:industry_name] if params[:industry_name].present?
          = hidden_field_tag :tel_filter, params[:tel_filter] if params[:tel_filter].present?
          .period-form__group
            = date_field_tag :period_start, @period_start, class: 'period-input', placeholder: '開始日'
            | ～
            = date_field_tag :period_end, @period_end, class: 'period-input', placeholder: '終了日'
            = submit_tag '適用', class: 'btn btn-primary period-apply-btn'
    .remain-box
      - remain = (@remaining_extractable || "___")
      | 本日残り抽出可能数：#{remain}件

  / 表
  table.extraction-table[width="100%" cellpadding="0" cellspacing="0"]
    thead
      tr
        th 
        th インポート件数<br/>(AI抽出前)
        th 抽出成功数
        th 抽出失敗数
        th 抽出成功率
        th Status
        th 
        th
        th 
    tbody
      - @crowdworks.each do |crowdwork|
        - company       = crowdwork.title
        - import_count  = @industry_counts[crowdwork.title][:tel_without]
        - success_count =  @industry_counts[crowdwork.title][:success_count]
        - fail_count    =  @industry_counts[crowdwork.title][:failure_count]
        - rate_txt      =  "#{(@industry_counts[crowdwork.title][:rate].to_f.round(2))}%"
        - status_txt    = @industry_counts[crowdwork.title][:status]
        - total_count = [import_count, @remaining_extractable].min

        tr.data-row[data-industry=company]
          td = company
          td
            = import_count
          td.js-success
            = success_count
          td.js-failure
            = fail_count
          td.js-rate 
            = rate_txt
          td.js-status
            = status_txt
            - if status_txt == '抽出中' || status_txt == '抽出完了'
              - processed = success_count.to_i + fail_count.to_i
              - total_tracking = @industry_counts[crowdwork.title][:total_count].to_i
              br
              .js-progress-sub
                | (#{processed}/#{total_tracking})

          td.action-cell
            = form_with url: extract_company_info_path(industry_name: crowdwork.title), method: :post, html: { class: "extract-form" } do
              = hidden_field_tag :count, "", id: "extract-count"
              = link_to "AI抽出開始", "#", class: "btn btn-ai extract_button", data: { max: total_count, company: company }
              |(
              = success_count
              |)
          td.action-cell  
              = link_to "リスト制作開始", filter_by_industry_path(industry_name: crowdwork.title, period_start: @period_start, period_end: @period_end), method: :get, class: "btn btn-success"
              |(
              = fail_count
              |)
          td.action-cell  
            = link_to "チェック開始", filter_by_industry_path(industry_name: crowdwork.title, period_start: @period_start, period_end: @period_end, anchor: 'draft-list'), method: :get, class: "btn btn-success"


